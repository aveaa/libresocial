<div class="flex-row openvk-exclamination openvk-{$type ?? 'error'}-message">
    <strong><i class="
            {$type == 'error' ? 'far fa-times-circle' : ($type == 'warning' ? 'fas fa-exclamation' : ($type == 'info' ? 'fas fa-info' : 'far fa-check-circle'))}
        "></i></strong>
    <p class="no-margin"><strong>{$title}</strong><br>{$description}</p>
</div> 
